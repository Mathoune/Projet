#include <stdlib.h>
#include <stdio.h>
#include <uvsqgraphics.h>
#include "mes_types.h"
#include "afficher.h"
#include "deplacements.h"
#include "listes_memo.h"



LISTE
bouge (SLIDER S,LISTE l)
{
  char c;
  int a,f;
  POINT p;
  l = ajout (l, S);
  printf("s.x= %d s.y= %d",S.x, S.y);
  while ((S.y != S.sy) || (S.x != S.sx))
    {

      a = wait_key_arrow_clic (&c, &f, &p);
      SDL_EnableKeyRepeat (0, SDL_DEFAULT_REPEAT_INTERVAL);
      S.px = S.x * TAILLE_CASE + (TAILLE_CASE / 2);
      S.py = S.y * TAILLE_CASE + (TAILLE_CASE / 2);

      if (a == EST_FLECHE)
	{
	 S = deplace(f,S);
	 l = ajout (l, S);
	}
      if (a == EST_TOUCHE)
	{
		  l=retour(l,S,c);
	}
   }
    return l;
}
